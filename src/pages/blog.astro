    <title>Blog ‚Ä¢ Veronika Flores</title>
    <style>
      :root {
        /* Light mode colors */
        --color-primary: #000000;
        --color-secondary: #404040;
        --color-tertiary: #808080;
        --color-accent: #f5f5f5;
        --color-background: #ffffff;
        --color-surface: #fafafa;
        --color-nav-bg: rgba(255, 255, 255, 0.95);
        --color-nav-bg-scroll: rgba(255, 255, 255, 0.98);
        --font-primary: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
        --font-mono: "JetBrains Mono", "Courier New", monospace;
        --spacing-xs: 0.5rem;
        --spacing-sm: 1rem;
        --spacing-md: 2rem;
        --spacing-lg: 4rem;
        --spacing-xl: 6rem;
        --border-radius: 2px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* Dark mode colors */
      [data-theme="dark"] {
        --color-primary: #ffffff;
        --color-secondary: #e4e4e7;
        --color-tertiary: #a1a1aa;
        --color-accent: #18181b;
        --color-background: #0a0a0a;
        --color-surface: #141414;
        --color-nav-bg: rgba(10, 10, 10, 0.95);
        --color-nav-bg-scroll: rgba(10, 10, 10, 0.98);
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        transition:
          background-color 0.3s ease,
          color 0.3s ease,
          border-color 0.3s ease;
      }

      html {
        font-family: var(--font-primary);
        font-size: 16px;
        line-height: 1.6;
        scroll-behavior: smooth;
      }
      body {
        background-color: var(--color-background);
        color: var(--color-primary);
        font-weight: 400;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Improve text readability on all devices */
      @media (max-width: 768px) {
        body {
          text-rendering: optimizeSpeed;
        }
      } /* Navigation */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: var(--spacing-sm) var(--spacing-md);
        background: var(--color-nav-bg);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(128, 128, 128, 0.1);
        z-index: 1000;
        transition: var(--transition);
      }

      .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav-logo {
        font-family: var(--font-mono);
        font-weight: 500;
        font-size: 1.125rem;
        color: var(--color-primary);
        text-decoration: none;
      }
      .nav-links {
        display: flex;
        gap: var(--spacing-md);
        list-style: none;
        align-items: center;
      }

      .nav-link {
        color: var(--color-secondary);
        text-decoration: none;
        font-weight: 400;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
        transition: var(--transition);
        text-transform: uppercase;
      }

      .nav-link:hover,
      .nav-link.active {
        color: var(--color-primary);
      }

      /* Dark mode toggle button */
      .theme-toggle {
        background: none;
        border: none;
        border-radius: var(--border-radius);
        padding: var(--spacing-xs);
        cursor: pointer;
        color: var(--color-secondary);
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        transition: var(--transition);
        margin-left: var(--spacing-sm);
      }

      .theme-toggle:hover {
        color: var(--color-primary);
        transform: scale(1.05);
        background: rgba(128, 128, 128, 0.1);
      }

      .theme-toggle:focus {
        outline: none;
        background: rgba(128, 128, 128, 0.15);
      }

      /* Hero Section */
      .hero {
        padding: calc(80px + var(--spacing-xl)) var(--spacing-md)
          var(--spacing-xl);
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
      }

      .hero-title {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 300;
        letter-spacing: -0.02em;
        margin-bottom: var(--spacing-sm);
      }

      .hero-subtitle {
        font-size: 1.25rem;
        color: var(--color-secondary);
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
      }

      /* Filter Section */
      .filters {
        padding: 0 var(--spacing-md) var(--spacing-lg);
        max-width: 1200px;
        margin: 0 auto;
      }

      .filter-buttons {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: var(--spacing-xs);
      }
      .filter-btn {
        padding: var(--spacing-xs) var(--spacing-sm);
        background: transparent;
        border: 1px solid rgba(128, 128, 128, 0.2);
        border-radius: var(--border-radius);
        color: var(--color-secondary);
        font-family: var(--font-mono);
        font-size: 0.875rem;
        cursor: pointer;
        transition: var(--transition);
      }

      .filter-btn:hover,
      .filter-btn.active {
        background: var(--color-primary);
        color: var(--color-background);
        border-color: var(--color-primary);
      }

      /* Blog Grid */
      .blog-grid {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--spacing-md) var(--spacing-xl);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: var(--spacing-lg);
      }
      .blog-post {
        background: var(--color-surface);
        border-radius: var(--border-radius);
        padding: var(--spacing-md);
        transition: var(--transition);
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        display: block;
      }

      .blog-post:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      }

      .post-category {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: var(--color-background);
        border-radius: var(--border-radius);
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--color-tertiary);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: var(--spacing-sm);
      }

      .post-title {
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: var(--spacing-xs);
        line-height: 1.3;
        color: var(--color-primary);
      }

      .post-excerpt {
        color: var(--color-secondary);
        line-height: 1.6;
        margin-bottom: var(--spacing-sm);
      }

      .post-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.875rem;
        color: var(--color-tertiary);
        font-family: var(--font-mono);
      }

      .post-date {
        font-weight: 400;
      }

      .post-read-time {
        font-style: italic;
      }

      /* Coming Soon Message */
      .coming-soon {
        text-align: center;
        padding: var(--spacing-xl) var(--spacing-md);
        max-width: 600px;
        margin: 0 auto;
      }

      .coming-soon h3 {
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: var(--spacing-sm);
        color: var(--color-primary);
      }

      .coming-soon p {
        color: var(--color-secondary);
        line-height: 1.6;
      } /* Footer */
      .footer {
        border-top: 1px solid rgba(128, 128, 128, 0.1);
        padding: var(--spacing-md);
        text-align: center;
        color: var(--color-tertiary);
        font-size: 0.875rem;
        transition: var(--transition);
      } /* Ultra Responsive Design */

      /* Large Desktop (1400px+) */
      @media (min-width: 1400px) {
        .hero,
        .filters,
        .blog-grid {
          max-width: 1400px;
          margin: 0 auto;
        }

        .blog-grid {
          grid-template-columns: repeat(3, 1fr);
          gap: var(--spacing-xl);
        }
      }

      /* Desktop (1024px - 1399px) */
      @media (max-width: 1399px) and (min-width: 1024px) {
        .blog-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: var(--spacing-lg);
        }
      }

      /* Tablet Landscape (900px - 1023px) */
      @media (max-width: 1023px) and (min-width: 900px) {
        .hero-title {
          font-size: clamp(2rem, 5vw, 3rem);
        }

        .hero-subtitle {
          font-size: clamp(1rem, 2.5vw, 1.15rem);
        }

        .blog-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: var(--spacing-md);
          padding: 0 var(--spacing-sm) var(--spacing-lg);
        }

        .blog-post {
          min-height: 280px;
        }
      }

      /* Tablet Portrait (768px - 899px) */
      @media (max-width: 899px) and (min-width: 768px) {
        .nav-container {
          padding: 0 var(--spacing-sm);
        }

        .nav-links {
          gap: var(--spacing-sm);
        }

        .nav-link {
          font-size: 0.8rem;
        }

        .hero {
          padding: calc(80px + var(--spacing-lg)) var(--spacing-sm)
            var(--spacing-lg);
        }

        .hero-title {
          font-size: clamp(1.8rem, 5vw, 2.5rem);
        }

        .hero-subtitle {
          font-size: clamp(0.95rem, 2.5vw, 1.1rem);
        }

        .filters {
          padding: 0 var(--spacing-sm) var(--spacing-md);
        }

        .filter-buttons {
          gap: var(--spacing-xs);
          justify-content: flex-start;
          overflow-x: auto;
          padding-bottom: var(--spacing-xs);
        }

        .filter-btn {
          flex-shrink: 0;
          font-size: 0.8rem;
          padding: var(--spacing-xs) var(--spacing-sm);
        }

        .blog-grid {
          grid-template-columns: 1fr;
          gap: var(--spacing-md);
          padding: 0 var(--spacing-sm) var(--spacing-lg);
        }

        .blog-post {
          padding: var(--spacing-sm);
        }

        .post-title {
          font-size: 1.3rem;
        }

        .coming-soon {
          padding: var(--spacing-lg) var(--spacing-sm);
        }
      }

      /* Mobile Landscape & Large Mobile (480px - 767px) */
      @media (max-width: 767px) and (min-width: 480px) {
        .nav {
          padding: var(--spacing-xs) var(--spacing-sm);
        }

