        padding: calc(80px + var(--spacing-xl)) var(--spacing-md)
          var(--spacing-xl);
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
      }

      .hero-title {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 300;
        letter-spacing: -0.02em;
        margin-bottom: var(--spacing-sm);
      }

